{% extends 'base.html.twig' %}

{% block title %}Association{% endblock %}

{% block body %}
    <h1>Association</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ association.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ association.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ association.description }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ association.creationDate ? association.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Adress_number</th>
                <td>{{ association.adressNumber }}</td>
            </tr>
            <tr>
                <th>Adress_street</th>
                <td>{{ association.adressStreet }}</td>
            </tr>
            <tr>
                <th>Adress_town</th>
                <td>{{ association.adressTown }}</td>
            </tr>
            <tr>
                <th>Adress_postcode</th>
                <td>{{ association.adressPostcode }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ association.website }}</td>
            </tr>
            <tr>
                <th>Telephon</th>
                <td>{{ association.telephon }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ association.mail }}</td>
            </tr>
            <tr>
                <th>IsRefuge</th>
                <td>{{ association.isRefuge ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('association_index') }}">back to list</a>

    <a href="{{ path('association_edit', {'id': association.id}) }}">edit</a>

    {{ include('association/_delete_form.html.twig') }}
{% endblock %}
